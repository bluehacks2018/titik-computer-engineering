<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.titikcoe.www.bluehacks.Activities.UploadAudio">

    <TextView
        android:id="@+id/txv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Title"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="16dp" />

    <EditText
        android:id="@+id/edt_title"
        android:layout_width="350dp"
        android:layout_height="45dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@+id/txv_title"
        tools:layout_editor_absoluteX="16dp" />

    <TextView
        android:id="@+id/txv_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Description"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/edt_title"
        tools:layout_editor_absoluteX="16dp" />

    <EditText
        android:id="@+id/edt_desc"
        android:layout_width="345dp"
        android:layout_height="75dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="textMultiLine"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@+id/txv_desc"
        tools:layout_editor_absoluteX="16dp" />

    <TextView
        android:id="@+id/txv_field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Field of Interest"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/edt_playlist"
        tools:layout_editor_absoluteX="16dp" />

    <Spinner
        android:id="@+id/spn_field"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:entries="@array/field_arrays"
        android:prompt="@string/field_prompt"
        app:layout_constraintTop_toBottomOf="@+id/txv_field"
        tools:layout_editor_absoluteX="16dp" />

    <TextView
        android:id="@+id/txv_tags"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Tags"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@+id/spn_field"
        tools:layout_editor_absoluteX="16dp" />

    <EditText
        android:id="@+id/edt_tags"
        android:layout_width="349dp"
        android:layout_height="44dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintTop_toBottomOf="@+id/txv_tags"
        tools:layout_editor_absoluteX="16dp" />

    <Button
        android:id="@+id/btn_proceed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:text="Proceed"
        app:layout_constraintTop_toBottomOf="@+id/edt_tags"
        tools:layout_editor_absoluteX="147dp" />

    <EditText
        android:id="@+id/edt_playlist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txv_playlist" />

    <TextView
        android:id="@+id/txv_playlist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Playlist"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@+id/edt_desc"
        tools:layout_editor_absoluteX="16dp" />/>
</android.support.constraint.ConstraintLayout>
